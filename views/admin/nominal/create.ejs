<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs %> <%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Add</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Nominal</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="POST" action="/nominal/create"> 
                  <div class="card-body">
                    <div class="form-group">
                        <label>Coin Name</label>
                        <select class="form-control select2" style="width: 100%;" name="coinName" id="coinName" required>
                          <option selected="selected">Choose Coin</option>
                          <option value="Gold">Gold</option>
                          <option value="Diamond">Diamond</option>
                          <option value="Jewel">Jewel</option>
                        </select>
                      </div>
                    <div class="form-group">
                      <label for="coinQuantity">Coin Quantity</label>
                      <input name="coinQuantity" type="number" class="form-control" id="coinQuantity" placeholder="Insert Coin Amount" required />
                    </div>
                    <div class="form-group">
                      <label for="coinPrice">Price</label>
                      <input name="coinPrice" type="number" class="form-control" id="coinPrice" placeholder="Insert Coin Price" required />
                    </div>
                  </div>
                  <!-- /.card-body -->

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
